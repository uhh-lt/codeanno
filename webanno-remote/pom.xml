  <parent>
    <groupId>de.uhh.lt.codeanno</groupId>
    <artifactId>codeanno</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>webanno-remote</artifactId>
  <name>WebAnno - Core - Remote API</name>
  <packaging>jar</packaging>
  <dependencies>
    <dependency>
